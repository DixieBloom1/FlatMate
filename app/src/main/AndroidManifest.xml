<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlatMate"
        tools:targetApi="31">

        <!-- SplashActivity as starting activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.FlatMate" />

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.FlatMate" />

        <!-- HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".EditProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".ChangePasswordActivity"
            android:exported="true"
            android:label="@string/title_activity_change_password"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".AdDetailActivity"
            android:exported="true"
            android:label="Ad Details"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".NewAdActivity"
            android:exported="true"
            android:label="New Ad"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".AddRoommateActivity"
            android:exported="true"
            android:label="Add Roommate"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".SearchRoommatesActivity"
            android:exported="true"
            android:label="Search Roommates"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".RoommateListActivity"
            android:exported="true"
            android:label="Roommates List"
            android:theme="@style/Theme.FlatMate" />

        <!-- New Expense Management Listing Activity -->
        <activity
            android:name=".ManageExpensesActivity"
            android:exported="true"
            android:label="Expenses"
            android:theme="@style/Theme.FlatMate" />

        <!-- Existing AddExpenseActivity (for creating a new expense) -->
        <activity
            android:name=".AddExpenseActivity"
            android:exported="true"
            android:label="Add Expense"
            android:theme="@style/Theme.FlatMate" />

        <activity
            android:name=".EditExpenseActivity"
            android:exported="true"
            android:label="Edit Expense"
            android:theme="@style/Theme.FlatMate" />

    </application>

</manifest>
