<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, User!"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/textPrimary"/>

        <TextView
            android:id="@+id/userIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My ID: **********"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/textMuted"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/roommateCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roommate count: 0"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/searchRoommatesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Roommates"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/manageExpensesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Expenses"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/viewRoommatesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Roommates"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/addRoommateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Roommate"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
